---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import TrustBar from '../components/TrustBar.astro';
import About from '../components/About.astro';
import Services from '../components/Services.astro';
import Leadership from '../components/Leadership.astro';
import CTA from '../components/CTA.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
---

<Layout title="EEDEE Law - Life Sciences Legal Counsel | Clinical Research Compliance">
  <nav class="fixed top-0 left-0 right-0 z-50 backdrop-blur-xl bg-white/80 border-b border-stone-200/50">
    <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
      <a href="/" class="flex items-center">
        <img 
          src="https://res.cloudinary.com/dil14r8je/image/upload/v1768296682/auto-site-builder/Edye%20Edens%20Life%20Sciences%20Law%20Group/image_0.png" 
          alt="EEDEE Law" 
          class="h-10"
        />
      </a>
      
      <div class="hidden md:flex items-center gap-8">
        <a href="#services" class="text-stone-700 hover:text-amber-600 transition-colors font-medium">Services</a>
        <a href="#about" class="text-stone-700 hover:text-amber-600 transition-colors font-medium">Our Approach</a>
        <a href="#leadership" class="text-stone-700 hover:text-amber-600 transition-colors font-medium">Leadership</a>
        <a href="#contact" class="px-6 py-2 bg-gradient-to-r from-amber-600 to-rose-600 text-white rounded-full font-semibold hover:shadow-lg hover:shadow-amber-500/25 transition-all duration-300">
          Start a Conversation
        </a>
      </div>
      
      <!-- Mobile menu button -->
      <button class="md:hidden text-stone-700" aria-label="Menu">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </nav>
  
  <main>
    <Hero />
    <TrustBar />
    <About />
    <Services />
    <Leadership />
    <CTA />
  </main>
  
  <Footer />
  
  <script src="../scripts/animations.ts"></script>
</Layout>
---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Contact - EEDEE Law | Life Sciences Legal Counsel">
  <main>
    <!-- Navigation -->
    <nav class="bg-slate-950 border-b border-white/10">
      <div class="max-w-7xl mx-auto px-6 md:px-8 lg:px-12">
        <div class="flex items-center justify-between h-20">
          <a href="/" class="flex items-center">
            <img 
              src="https://res.cloudinary.com/dil14r8je/image/upload/v1768296682/auto-site-builder/Edye%20Edens%20Life%20Sciences%20Law%20Group/image_0.png" 
              alt="EEDEE Law" 
              class="h-10 w-auto"
            />
          </a>
          <a href="/" class="text-slate-400 hover:text-white transition-colors duration-200">‚Üê Back to Home</a>
        </div>
      </div>
    </nav>
    
    <!-- Contact Section -->
    <section class="py-32 md:py-40 lg:py-48 bg-stone-50">
      <div class="max-w-7xl mx-auto px-6 md:px-8 lg:px-12">
        <div class="max-w-4xl mx-auto">
          <h1 class="text-6xl md:text-7xl font-black tracking-tighter leading-none text-slate-950 mb-8 text-center">
            Get in Touch
          </h1>
          
          <div class="text-center mb-16">
            <p class="text-xl text-stone-600 mb-8">
              Ready to turn regulatory roadblocks into pathways forward? Let's discuss how we can help.
            </p>
            
            <div class="grid md:grid-cols-3 gap-8 mb-16">
              <div class="text-center">
                <h3 class="font-bold text-slate-950 mb-2">Email</h3>
                <a href="mailto:me@eedeelaw.com" class="text-amber-600 hover:text-amber-700 transition-colors">me@eedeelaw.com</a>
              </div>
              <div class="text-center">
                <h3 class="font-bold text-slate-950 mb-2">Schedule</h3>
                <a href="https://calendly.com/eedeelaw" class="text-amber-600 hover:text-amber-700 transition-colors">Book a Meeting</a>
              </div>
              <div class="text-center">
                <h3 class="font-bold text-slate-950 mb-2">Connect</h3>
                <a href="https://www.linkedin.com/company/eedee-law/" class="text-amber-600 hover:text-amber-700 transition-colors">LinkedIn</a>
              </div>
            </div>
          </div>
          
          <!-- Contact Form -->
          <div class="bg-white p-8 md:p-12 shadow-xl">
            <form class="space-y-6">
              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <label for="first-name" class="block text-sm font-semibold text-slate-950 mb-2">First name</label>
                  <input type="text" id="first-name" name="first-name" class="w-full px-4 py-3 border border-stone-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-400 focus:border-transparent transition-all" />
                </div>
                <div>
                  <label for="last-name" class="block text-sm font-semibold text-slate-950 mb-2">Last name</label>
                  <input type="text" id="last-name" name="last-name" class="w-full px-4 py-3 border border-stone-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-400 focus:border-transparent transition-all" />
                </div>
              </div>
              
              <div>
                <label for="email" class="block text-sm font-semibold text-slate-950 mb-2">Email</label>
                <input type="email" id="email" name="email" class="w-full px-4 py-3 border border-stone-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-400 focus:border-transparent transition-all" required />
              </div>
              
              <div>
                <label for="organization" class="block text-sm font-semibold text-slate-950 mb-2">Organization</label>
                <input type="text" id="organization" name="organization" class="w-full px-4 py-3 border border-stone-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-400 focus:border-transparent transition-all" />
              </div>
              
              <div>
                <label for="message" class="block text-sm font-semibold text-slate-950 mb-2">How can we help?</label>
                <textarea id="message" name="message" rows="6" class="w-full px-4 py-3 border border-stone-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-400 focus:border-transparent transition-all resize-none"></textarea>
              </div>
              
              <button type="submit" class="w-full bg-amber-400 text-slate-950 px-8 py-4 rounded-full font-bold hover:scale-105 hover:bg-amber-500 transition-all duration-200">
                Send Message
              </button>
            </form>
          </div>
        </div>
      </div>
    </section>
    
    <Footer />
  </main>
</Layout>
<script>
  // Service tab switching
  const tabs = document.querySelectorAll('.service-tab');
  const contents = document.querySelectorAll('.service-content');
  
  tabs.forEach(tab => {
    tab.addEventListener('click', () => {
      const service = tab.getAttribute('data-service');
      
      // Update active tab
      tabs.forEach(t => {
        t.classList.remove('active', 'bg-amber-600', 'text-white');
        t.classList.add('bg-white', 'text-stone-700');
      });
      tab.classList.add('active', 'bg-amber-600', 'text-white');
      tab.classList.remove('bg-white', 'text-stone-700');
      
      // Show corresponding content
      contents.forEach(content => {
        content.classList.add('hidden');
      });
      document.getElementById(`${service}-content`)?.classList.remove('hidden');
    });
  });
</script>
---
export interface Props {
  title: string;
  subtitle?: string;
  ctaText?: string;
  ctaLink?: string;
  backgroundImage?: string;
}

const { 
  title, 
  subtitle, 
  ctaText = "Start a Conversation", 
  ctaLink = "/contact",
  backgroundImage
} = Astro.props;
---

<section class="relative bg-gray-50 section-spacing overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, rgba(0,0,0,0.15) 1px, transparent 0); background-size: 20px 20px;"></div>
  </div>
  
  <!-- Background Image -->
  {backgroundImage && (
    <div class="absolute right-0 top-0 bottom-0 w-1/3 opacity-10">
      <img 
        src={backgroundImage} 
        alt="" 
        class="w-full h-full object-cover"
      />
    </div>
  )}
  
  <div class="container-custom relative">
    <div class="text-center max-w-5xl mx-auto">
      <h1 class="hero-title fade-in">
        {title}
      </h1>
      
      {subtitle && (
        <p class="hero-subtitle fade-in stagger-1">
          {subtitle}
        </p>
      )}
      
      <div class="mt-8 fade-in stagger-2">
        <a href={ctaLink} class="btn-primary inline-block">
          {ctaText}
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-title {
    @apply text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight mb-6;
  }
  
  .hero-subtitle {
    @apply text-lg md:text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed;
  }
</style>
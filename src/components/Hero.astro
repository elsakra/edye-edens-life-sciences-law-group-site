---
---

<section id="home" class="relative min-h-screen bg-gradient-to-br from-stone-50 via-amber-50/30 to-rose-50/20 overflow-hidden">
  <!-- Subtle texture overlay -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top_right,rgba(251,191,36,0.15),transparent_50%)]" />
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_bottom_left,rgba(244,63,94,0.10),transparent_50%)]" />
  </div>
  
  <!-- Navigation -->
  <nav class="relative z-20 px-6 lg:px-8">
    <div class="max-w-7xl mx-auto py-6">
      <div class="flex items-center justify-between">
        <a href="/" class="flex items-center">
          <img src="https://res.cloudinary.com/dil14r8je/image/upload/v1768296682/auto-site-builder/Edye%20Edens%20Life%20Sciences%20Law%20Group/image_0.png" alt="EEDEE Law" class="h-12 w-auto" />
        </a>
        
        <!-- Desktop Navigation -->
        <div class="hidden md:flex items-center gap-8">
          <a href="#approach" class="text-stone-700 hover:text-amber-600 transition-colors font-medium">Our Approach</a>
          <a href="#services" class="text-stone-700 hover:text-amber-600 transition-colors font-medium">Services</a>
          <a href="#leadership" class="text-stone-700 hover:text-amber-600 transition-colors font-medium">Leadership</a>
          <a href="#contact" class="inline-flex items-center gap-2 px-6 py-3 bg-amber-600 text-white rounded-full font-semibold hover:bg-amber-700 hover:scale-105 transition-all duration-300">
            Start a Conversation
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
        
        <!-- Mobile menu button -->
        <button id="mobile-menu-button" class="md:hidden p-2">
          <svg class="w-6 h-6 text-stone-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
      
      <!-- Mobile Navigation -->
      <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 border-t border-stone-200">
        <div class="flex flex-col gap-4 pt-4">
          <a href="#approach" class="text-stone-700 hover:text-amber-600 transition-colors font-medium">Our Approach</a>
          <a href="#services" class="text-stone-700 hover:text-amber-600 transition-colors font-medium">Services</a>
          <a href="#leadership" class="text-stone-700 hover:text-amber-600 transition-colors font-medium">Leadership</a>
          <a href="#contact" class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-amber-600 text-white rounded-full font-semibold hover:bg-amber-700 transition-all duration-300">
            Start a Conversation
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </nav>
  
  <!-- Hero Content -->
  <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8 pt-20 pb-32 md:pt-32 md:pb-40">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div class="animate-on-scroll">
        <h1 class="text-5xl md:text-7xl lg:text-8xl font-black text-stone-900 leading-[0.9] tracking-extra-tight mb-8">
          Law that works
          <span class="block text-transparent bg-clip-text bg-gradient-to-r from-amber-600 to-rose-600">
            for research,
          </span>
          not against it.
        </h1>
        
        <p class="text-xl md:text-2xl text-stone-700 mb-8 leading-relaxed">
          Life sciences attorney with 30+ years of clinical research experience. We turn compliance roadblocks into pathways forward.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="#contact" class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-amber-600 text-white rounded-full font-semibold hover:bg-amber-700 hover:scale-105 transition-all duration-300 text-lg">
            Start a Conversation
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
          <a href="#approach" class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white text-stone-700 rounded-full font-semibold hover:bg-stone-100 transition-all duration-300 text-lg border border-stone-200">
            Learn Our Approach
          </a>
        </div>
      </div>
      
      <div class="relative animate-on-scroll" style="animation-delay: 0.2s">
        <div class="absolute inset-0 bg-gradient-to-br from-amber-600/20 to-rose-600/20 rounded-3xl blur-3xl" />
        <img 
          src="https://res.cloudinary.com/dil14r8je/image/upload/v1768296683/auto-site-builder/Edye%20Edens%20Life%20Sciences%20Law%20Group/image_4.jpg" 
          alt="Clinical research professional working" 
          class="relative rounded-3xl shadow-2xl w-full"
        />
      </div>
    </div>
    
    <!-- Trust Indicators -->
    <div class="mt-20 pt-12 border-t border-stone-200">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div class="animate-on-scroll">
          <div class="text-3xl md:text-4xl font-bold text-stone-900">30+</div>
          <div class="text-stone-600 mt-1">Years Experience</div>
        </div>
        <div class="animate-on-scroll" style="animation-delay: 0.1s">
          <div class="text-3xl md:text-4xl font-bold text-stone-900">500+</div>
          <div class="text-stone-600 mt-1">Studies Supported</div>
        </div>
        <div class="animate-on-scroll" style="animation-delay: 0.2s">
          <div class="text-3xl md:text-4xl font-bold text-stone-900">100%</div>
          <div class="text-stone-600 mt-1">Compliance Rate</div>
        </div>
        <div class="animate-on-scroll" style="animation-delay: 0.3s">
          <div class="text-3xl md:text-4xl font-bold text-stone-900">24hr</div>
          <div class="text-stone-600 mt-1">Response Time</div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-stone-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
    </svg>
  </div>
</section>